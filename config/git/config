[color]
	ui     = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old  = red bold
	new  = green bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
  untracked = cyan

[core]
	excludefile = ~/.config/git/ignore
	whitespace = fix, -indent-with-non-tab,trailing-space,cr-at-eol
	autocrlf = input

[alias]
	f = fetch --all -v
	br = branch -vvv
	ci = commit
	ca = commit -a
	cam = commit -a -m
	cia = commit --amend
	co = checkout
	cp = cherry-pick
	df = diff
	dfs = diff --staged
	h = log --graph --date=iso --pretty=format:'%Cgreen%h%Creset %C(69)%ad%Creset | %s%Cgreen%d%Creset %C(yellow)[%an]%Creset'
	ha = log --graph --date=iso --all --pretty=format:'%Cgreen%h%Creset %C(69)%ad%Creset %C(190)%G?%Creset | %s%Cgreen%d%Creset %C(yellow)[%an]%Creset'
	hist = log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short
	pr = pull --rebase
	st = status
	sm = submodule
	smu = submodule update --remote --recursive
	rename = branch -m
	undo = reset --soft HEAD^
	untrack = update-index --assume-unchanged
	export = !"git archive --prefix=$(basename $PWD)/ --format="tar.gz" $(git symbolic-ref --short HEAD) -o"
	save = stash save
	load = !"f() { git stash apply stash^{/$*}; }; f"

	# apple-pick taken from http://joeshaw.org/2010/06/22/667
	apple-pick = !sh -c 'git rev-list --reverse "$@" | xargs -n1 git cherry-pick' -

	format-patch = -M -C
	todo = grep -n -E '(FIXME|TODO|XXX)[:]? '

[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = ajdiaz@connectical.com
	smtpserverport = 587
	chainreplyto = false

[format]
	numbered = auto

[merge]
	stat = true
  tool = vimdiff
  conflictstyle = diff3

[mergetool]
  prompt = false

[pack]
	threads = 1

[giggle]
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	file-view-vpane-position = 313

[push]
	default = simple

[rebase]
	autosquash = true
	stat = true

[branch]
	autosetuprebase = always

[diff]
	algorithm = patience
	renameLimit = 10000

[rerere]
    enabled = true

[credential]
    helper = cache
