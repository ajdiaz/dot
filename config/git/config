[color]
	ui     = auto

[color "branch"]
	current = bold white
	local = bold "#6699cc"
	remote = "#ffcc66"
	upstream = "#ffcc66"
	plain = "#999999"

[color "diff"]
	meta = white bold
	frag = "#ffcc66"
	old  = red bold
	new  = green bold
	whitespace = red reverse
	context = "#999999"

[color "status"]
	header = "#999999"
	added = "#99cc99"
	changed = "#f2777a"
	untracked = "#ffcc66"
	branch = bold "#6699cc"
	nobranch = bold ul blink "#f99157"

[core]
	excludefile = ~/.config/git/ignore
	whitespace = fix, -indent-with-non-tab,trailing-space,cr-at-eol
	autocrlf = input
	mode = progress
	editor = vim

[alias]
	f = fetch --all -v
	r = remote
	br = branch -v -a
	ci = commit
	ca = commit -a
	cam = commit -a -m
	cia = commit -a --amend --no-edit
	co = checkout
	cp = cherry-pick
	df = diff
	dfs = diff --staged
	h = log --graph --date=iso --pretty=format:'%Cgreen%h%Creset %C(69)%ad%Creset | %s%Cgreen%d%Creset %C(yellow)[%an]%Creset'
	ha = log --graph --date=iso --all --pretty=format:'%Cgreen%h%Creset %C(69)%ad%Creset %C(190)%G?%Creset | %s%Cgreen%d%Creset %C(yellow)[%an]%Creset'
	hist = log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short
	pr = pull --rebase
	st = status
	sm = submodule
	smu = submodule update --remote --recursive
	rename = branch -m
	undo = reset --soft HEAD^
	untrack = update-index --assume-unchanged
	export = !"git archive --prefix=$(basename $PWD)/ --format="tar.gz" $(git symbolic-ref --short HEAD) -o"
	save = stash save
	load = !"f() { git stash apply stash^{/$*}; }; f"
	split = !"f() { git subtree split -P "${1%/}" -b "WIP-split-branch"&& git co "WIP-split-branch"; }; f"

	# apple-pick taken from http://joeshaw.org/2010/06/22/667
	apple-pick = !sh -c 'git rev-list --reverse "$@" | xargs -n1 git cherry-pick' -

	format-patch = -M -C
	todo = grep -n -E '(FIXME|TODO|XXX)[:]? '

[sendemail]
	smtpserverport = 587
	chainreplyto = false
	annotate = true
	assume8bitEncoding = utf-8
	smtpuser =
	smtpserver = "/usr/bin/msmtp"
	smtpencryption = tls
	confirm = auto

[format]
	numbered = auto
	signoff = true
	coverletter = auto

[url "git@github.com:"]
	insteadOf = gh:

[url "git@gitlab.com:"]
	insteadOf = gl:

[merge]
	stat = true
	tool = vimdiff
	conflictstyle = diff3

[mergetool]
	prompt = false

[pack]
	threads = 1

[giggle]
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	file-view-vpane-position = 313

[push]
	default = simple

[rebase]
	autosquash = true
	stat = true

[branch]
	autosetuprebase = always

[diff]
	algorithm = patience
	renameLimit = 10000

[rerere]
	enabled = true

[credential]
	helper = cache

[include]
	  path = ~/.config/git/user

[submodule]
	fetchJobs = 4

[tag]
	sort = version:refname

[receive]
	denyCurrentBranch = warn
