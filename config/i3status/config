# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 10
        output_format = i3bar
        color_good = '#339966'
        color_degraded = '#339966'
        color_bad = '#b30000'
}

order += "wireless _first_"
order += "run_watch VPN"
order += "battery 0"
order += "load"
order += "volume master"
order += "path_exists mail"
order += "path_exists chat"
order += "tztime local"

wireless _first_ {
        format_up = "   %essid:%quality "
        format_down = "   "
}

battery 0 {
        format = " %remaining %status %percentage "
        integer_battery_capacity = true
        hide_seconds = true
        last_full_capacity = true
        status_chr = " "
        status_bat = " "
        status_full = " "
}

volume master {
        format = "   %volume "
        format_muted = "   %volume "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        color_degraded = '#b30000'
}

run_watch VPN {
        pidfile = "/run/openvpn-client@ajdiaz.pid"
        format = "  "
        format_down = "  "
}

tztime local {
        format = " %Y-%m-%d %H:%M "
}

load {
        format = "   %1min "
}

path_exists mail {
        path = "/home/ajdiaz/sys/mail/.new"
        format = "  "
        format_down = "  "
        color_bad = '#339966'
}

path_exists chat {
