# Settings.
auto-reload yes
article-sort-order date-asc
download-path ~/tmp/get
download-retries 3
download-timeout 15
keep-articles-days 360
mark-as-read-on-hover yes
always-display-description yes
refresh-on-startup yes
reload-threads 12
cleanup-on-quit yes
show-keymap-hint no
text-width 80
download-full-page yes

# Formats
datetime-format "%Y-%m-%d"
feedlist-format " ├─ %2U %n%S ➜  %t"
articlelist-format " ├─ %D %?a?%-10a ?%f ➜  %t"
feedlist-title-format " Feeds (%u/%t)"
itemview-title-format "  %T"
articlelist-title-format " ➜  %T"

# External programs.
browser xdg-open
player xdg-open

# Vim-like keybindings.
bind-key k up
bind-key j down
bind-key ^B pageup
bind-key ^F pagedown
bind-key d delete-article

# Colors.
color listnormal        white black
color listnormal_unread white black bold
color listfocus         white color246
color listfocus_unread  white color246 bold
color info              white color235 bold
color background        white black
color article           white black
color end-of-text-marker color246 black

# Highlight
highlight article "^(Feed|Title|Author|Link|Date):" color39 default
highlight article "https?://[^ ]+" color39 default
highlight articlelist "@[^ ]+" color106 default
highlight articlelist " [0-9][0-9][0-9][0-9]-[0-9][0-9]-[0-9][0-9] " color39 default
highlight articlelist "https?://[^ ]+" color39 default
