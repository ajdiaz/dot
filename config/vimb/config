handler-add mailto=i3-sensible-terminal -e mutt %s
handler-add ftp=i3-sensible-terminal -e wget %s -P ~/get

cnoremap <Up> <S-Tab>
cnoremap <Down> <Tab>

nnoremap <F11> :set fullscreen!<CR>
nnoremap ii gF
nnoremap ss :set scripts!\|no! r<CR>
nnoremap sc :set stylesheet!<CR><Esc>
nnoremap <C-W> :q<CR>

inoremap <C-E> <C-T>

set tabs-to-links=on
set cookie-accept=origin
set strict-ssl=on
set xss-auditor=on
set spacial-navigation=on
set download-path=~/get
set editor-command=i3-sensible-terminal --title vimb-editor --geometry 80x20+40+60 -e vim %s
set history-max-items=30000
set home-page=about:blank
set minimum-font-size=12
set monospace-font-size=12
set plugins=off
set scripts=on
set stylesheet=on
set webinspector=on
set javascript-can-open-windows-automatically=off
set javascript-can-access-clipboard=off
set input-autohide=on

shortcut-add gg=https://www.google.es/search?q=$0&ie=UTF-8
shortcut-add rfc=http://tools.ietf.org/html/rfc$0
shortcut-add wk=http://es.wikipedia.org/w/index.php?search=$0
shortcut-add gh=https://github.com/search?q=$0&type=Code

# GUI color settings
# Color scheme: Base16 Eighties (https://github.com/chriskempson/base16)
set completion-css=color:#d3d0c8;background-color:#000000;font:14pt DejaVu Sans Mono;
set completion-hover-css=color:#d3d0c8;background-color:#000000;font:14pt DejaVu Sans Mono;
set completion-selected-css=color:#d3d0c8;background-color:#515151;font:14pt DejaVu Sans Mono;

set input-css=color:#d3d0c8;background-color:#000000;font:14pt DejaVu Sans Mono;
set input-error-css=color:#f2777a;background-color:#ff0000;font:14pt DejaVu Sans Mono;

set status-css=color:#888888;background-color:#000000;font:14pt DejaVu Sans Mono;
set status-ssl-css=color:#99cc99;background-color:#000000;font:14pt DejaVu Sans Mono;
set status-ssl-invalid-css=color:#f2777a;background-color:#000000;font:14pt DejaVu Sans Mono;
