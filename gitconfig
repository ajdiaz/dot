[color]
	ui     = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old  = red bold
	new  = green bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	excludefile = ~/.gitignore
	whitespace = fix, -indent-with-non-tab,trailing-space,cr-at-eol

[alias]
	br = branch
	ci = commit
	ca = commit -a
	cia = commit --amend
	co = checkout
	df = diff
	dfs = diff --staged
	h = log --graph --date=iso --pretty=format:'%Cgreen%h%Creset %Cblue%ad%Creset | %s%Cgreen%d%Creset %C(yellow)[%an]%Creset'
	ha = log --graph --date=iso --all --pretty=format:'%Cgreen%h%Creset %Cblue%ad%Creset | %s%Cgreen%d%Creset %C(yellow)[%an]%Creset'
	hist = log --pretty=format:"%h %ad | %s%d [%an]" --graph --date=short
	pr = pull --rebase
	st = status
	sm = submodule
	undo = reset -hard HEAD -

[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = ajdiaz@connectical.com
	smtpserverport = 587
	chainreplyto = false

[merge]
	tool = vimdiff

[giggle]
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	file-view-vpane-position = 313
[push]
	default = simple
