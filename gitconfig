[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = ajdiaz@connectical.com
	smtpserverport = 587
	chainreplyto = false

[merge]
	tool = vimdiff

[giggle]
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	file-view-vpane-position = 313
