[color]
	ui     = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old  = red bold
	new  = green bold
	whitespace = red reverse

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	excludefile = ~/.gitignore
	whitespace = fix, -indent-with-non-tab,trailing-space,cr-at-eol

[alias]
	co   = commit -a
	plre = pull --rebase
	st   = status
	out  = log origin..HEAD
	rlog = reflog
	lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	redo = commit --amend
	br   = branch -a -v
	re   = remote -v
	sub  = submodule
	on   = checkout
	files = ls-files
	p    = pull

[sendemail]
	smtpencryption = tls
	smtpserver = smtp.gmail.com
	smtpuser = ajdiaz@connectical.com
	smtpserverport = 587
	chainreplyto = false

[merge]
	tool = vimdiff

[giggle]
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	file-view-vpane-position = 313
