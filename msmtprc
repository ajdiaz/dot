# Set default values for all following accounts.
defaults
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile /dev/null

# Account: ajdiaz.me
account ajdiaz.me
host mail.gandi.net
port 587
from ajdiaz@ajdiaz.me
auth on
user ajdiaz@ajdiaz.me
passwordeval "pass show mail.gandi.net"

# Set default account
account default : ajdiaz.me
