# Set default values for all following accounts.
defaults
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile /tmp/Caca

# Account: connectical
account connectical
host smtp.gmail.com
port 587
from ajdiaz@connectical.com
auth on
user ajdiaz@connectical.com

# Account: inactive.io
account inactive.io
host mail.gandi.net
port 587
from ajdiaz@inactive.io
auth on
user ajdiaz@inactive.io

# Set default account
account default : connectical
