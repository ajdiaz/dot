_sc () {
  local -a sc_commands
  for cmd in ${(k)_sc_cmd[@]} ; do
    sc_commands=( "${sc_commands[@]}" "${cmd}:${_sc_cmd[${cmd}]}" )
  done

  typeset -A opt_args
  local state

  _arguments \
    "1: :{_describe 'command' sc_commands}" \
    '*:: :->args'

  case ${words[1]} in
    play | rm)
      local -a sc_records=( $(sc ls) )
      _arguments "1: :{_describe 'sc' sc_records}"
      ;;
  esac
}

compdef _sc sc
